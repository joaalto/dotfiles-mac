[include]
    path = ~/.gituser
[diff]
    tool = vimdiff
[difftool]
	prompt = false
[alias]
    dt = difftool
    co = checkout
[giggle]
	main-window-maximized = false
	main-window-geometry = 1252x830+2407+95
	history-view-vpane-position = 249
	main-window-view = HistoryView
	file-view-vpane-position = 529
[core]
    editor = /usr/local/bin/vim
    autocrlf = input
    excludesfile = ~/.gitignore_global
[merge]
    tool = vimdiff3
    conflictstyle = diff3
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
    prompt = false
    keepBackup = false
[color]
    ui = auto
[push]
	default = simple
[pull]
    rebase = true
